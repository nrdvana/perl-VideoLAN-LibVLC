TYPEMAP
libvlc_instance_t *      O_LIBVLC
libvlc_media_t *         O_LIBVLC_MEDIA
libvlc_media_player_t *  O_LIBVLC_MEDIA_PLAYER

INPUT
O_LIBVLC
    $var = PerlVLC_get_instance_mg($arg);

OUTPUT
O_LIBVLC
    $arg = PerlVLC_set_instance_mg(sv_bless(newRV_noinc((SV*)newHV()), gv_stashpv(\"VideoLAN::LibVLC\", GV_ADD)), $var);

INPUT
O_LIBVLC_MEDIA
    $var = PerlVLC_get_media_mg($arg);

OUTPUT
O_LIBVLC_MEDIA
    $arg = PerlVLC_set_media_mg(sv_bless(newRV_noinc((SV*)newHV()), gv_stashpv(\"VideoLAN::LibVLC::Media\", GV_ADD)), $var);

INPUT
O_LIBVLC_MEDIA_PLAYER
    $var = PerlVLC_get_media_player_mg($arg);

OUTPUT
O_LIBVLC_MEDIA
    $arg = PerlVLC_set_media_player_mg(sv_bless(newRV_noinc((SV*)newHV()), gv_stashpv(\"VideoLAN::LibVLC::MediaPlayer\", GV_ADD)), $var);
